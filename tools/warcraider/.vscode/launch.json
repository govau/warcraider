  "version": "0.2.0",

  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/warcraider.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "RUST_BACKTRACE", "value": "1" },
        { "name": "RUST_LOG", "value": "warcraider" },
        { "name": "REPLICAS", "value": "1" },
        { "name": "WARC_NUMBER", "value": "1" },
        { "name": "OFFSET", "value": "0" },
      ],
      "externalConsole": true
    }
  ]
}
